<view class="container">
    <view class="page__bd">
        <view class="page__hd">
            <view class="page__title text-center">
                <image src="/images/edoctor/edoctor-logo.png" mode="aspectFit" style="width:10rem;height:4rem;"/>
            </view>
            <text class="page__desc text-center">eDoctor 将创新的信息技术、视觉设计与医药营销有效整合，深入垂直市场，持续创新</text>
        </view>

        <view class="weui-cells weui-cells_form">
            <view class="weui-cell ">
                <view class="weui-cell__hd">
                    <label class="weui-label">手机号</label>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" type="number" placeholder="请输入手机号"/>
                </view>

            </view>
            <view class="weui-cell weui-cell_vcode">
                <view class="weui-cell__hd ">
                    <label class="weui-label">验证码</label></view>
                <view class="weui-cell__bd">
                    <input class="weui-input" type="text" placeholder="请输入验证码"/>
                </view>
                <view class="weui-cell__ft">
                    <button class="weui-vcode-btn">获取验证码</button>
                </view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__hd">
                    <label class="weui-label">姓名</label></view>
                <view class="weui-cell__bd">
                    <input class="weui-input" type="text" placeholder="请输入真实姓名"/>
                </view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__hd">
                    <label class="weui-label">密码</label>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" type="password" placeholder="请输入密码"/>
                </view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__hd">
                    <label class="weui-label">确认密码</label>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" type="password" placeholder="请输入密码"/>
                </view>
            </view>
        </view>
        <view class="weui-btn-area">
            <button class="weui-btn weui-btn_primary">确定</button>
        </view>
    </view>
    <view class="page__ft text-center">
        <navigator class="link" redirect url="login">直接登陆</navigator>
        <navigator class="link" redirect url="forget">忘记密码</navigator>
    </view>
</view>